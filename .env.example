# =============================================================================
# Go Barcode Webapp - Environment Configuration Template
# =============================================================================
# Copy this file to .env and customize the values for your environment

# =============================================================================
# DATABASE CONFIGURATION
# =============================================================================
# Database connection settings
DB_HOST=your-database-host.com
DB_PORT=3306
DB_NAME=your-database-name
DB_USERNAME=your-database-user
DB_PASSWORD=your-database-password

# =============================================================================
# SERVER CONFIGURATION
# =============================================================================
# Application server settings
APP_PORT=8080
SERVER_HOST=0.0.0.0
SERVER_PORT=8080

# Application mode (release for production, debug for development)
GIN_MODE=release

# =============================================================================
# SECURITY CONFIGURATION
# =============================================================================
# Encryption key for secure operations (CHANGE IN PRODUCTION!)
ENCRYPTION_KEY=change-this-to-a-secure-random-key-in-production

# Session timeout in seconds (default: 1 hour)
SESSION_TIMEOUT=3600

# =============================================================================
# EMAIL CONFIGURATION (OPTIONAL)
# =============================================================================
# SMTP settings for email notifications
SMTP_HOST=your-smtp-host.com
SMTP_PORT=587
SMTP_USERNAME=your-smtp-username
SMTP_PASSWORD=your-smtp-password
FROM_EMAIL=noreply@yourcompany.com
FROM_NAME=Your Company Name
USE_TLS=true

# =============================================================================
# INVOICE CONFIGURATION
# =============================================================================
# Default tax rate (adjust for your country)
DEFAULT_TAX_RATE=19.0

# Default payment terms in days
DEFAULT_PAYMENT_TERMS=30

# Currency settings
CURRENCY_SYMBOL=â‚¬
CURRENCY_CODE=EUR

# =============================================================================
# LOGGING CONFIGURATION
# =============================================================================
# Log level: debug, info, warn, error
LOG_LEVEL=info

# Log file path
LOG_FILE=logs/app.log

# =============================================================================
# BACKUP CONFIGURATION (OPTIONAL)
# =============================================================================
# Enable/disable automatic backups
BACKUP_ENABLED=true

# Backup interval in seconds (86400 = 24 hours)
BACKUP_INTERVAL=86400

# Backup retention in days
BACKUP_RETENTION_DAYS=30